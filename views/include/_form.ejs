<form action="/api/users" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-dark">Name</label>
           <!-- <input type="hidden" name="id" value="">-->
            <input type="text" class="w3-input w3-border w3-hover-red" name="name" value="" placeholder="rahul gupta" required>
            
        </div>
        
       <div class="form-group">
           <label for="Email" class="text-dark">Email</label>
           <input type="text"  class="w3-input w3-border w3-hover-blue" name="email" value="" placeholder="example@gmail.com" >
           
       </div>
      <!-- <label for="gender" class="text-light">Gender</label>
       <div class="radio-inline">
        
           <input type="radio" name="gender" value="Male">
