        <div class="form-group">
            <label for="gender" class="text-dark">Done</label>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="status" value="Yes" <%= user.status == 'Yes' ? 'checked' : '' %> >
                <label for="radio-4" class="radio-label">Yes</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="status" value="No" <%= user.status == 'Pending' ? 'checked' : '' %> >
                <label for="radio-5" class="radio-label">No</label>
            </div>
        </div>
        <div class="form-group">
            <label for="Address" class="text-dark">Location</label>
            <input type="text" name="address" value="<%= user.address%>" placeholder="streetname/landmark/city" required>
            
        </div>
        <div class="form-group">
            <label for="City" class="text-dark">City</label>
            <input type="text" name="cname"  value="<%= user.cname%>"  required>
            
        </div>
        <br>
        <div class="form-group">
            <label for="Number" class="text-dark ">Ph Number</label>
            <input type="number" class="pn" name="phnumber" value="<%= user.phnumber%>" required>
            
        </div>
        <div class="form-group">
            <label for="Class" class="text-dark ">Class</label>
            <input type="text"  name="cl" value="<%= user.cl%>"  placeholder="A/B/C">
            
        </div>
        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>
       
